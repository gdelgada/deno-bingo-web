{
  "tasks": {
    "dev": "deno run --allow-env --allow-net --allow-read src/server.ts",
    "dev-fmt": "deno fmt --watch",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "test": "deno test --allow-env --allow-net --allow-read",
    "compile": "deno compile --allow-env --allow-net --allow-read --include public -o output/bingo-web src/server.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.6",
    "@std/http": "jsr:@std/http@^1.0.22",
    "@std/path": "jsr:@std/path@^1.1.3"
  },
  "lint": {
    "include": ["src/", "public/", "tests/"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/", "public/", "tests/"]
  }
}
